{% extends 'admin/layout.html.twig' %}

{% block page_title %}Acceuil{% endblock %}

{% block content %}
    <h2 class="msgHomeAdmin">Bienvenue dans votre Panneau d'administration {{ user['username'] }}</h2>
    <div class="blocksHomeAdmin">
        <div class="blockHomeAdminLeft">
            <fieldset class="blockNotePad">
                <legend>Bloc-note</legend>
                <div class="notePad">
                    <button id="btnNotePad">Activer</button>
                </div>
                <textarea id="textNotePad"></textarea>
            </fieldset>
            <div class="blockRecentMember">
                <fieldset class="recentMember">
                    <ul class="rencentMemberContent">
                        <li>Pseudo</li>
                        <li>example@example.com</li>
                        <li>12/12</li>
                    </ul>
                    <ul class="rencentMemberContent">
                        <li>Pseudo</li>
                        <li>example@example.com</li>
                        <li>12/12</li>
                    </ul>

                    <legend>Membre récents</legend>
                </fieldset>
            </div>
            <div class="blockSearchUser">
                <fieldset class="searchUser">
                    <legend>Recherche un utilisateur</legend>
                    <input type="text">
                    <button>Chercher</button>
                </fieldset>
            </div>
        </div>
        <div class="blockHomeAdminRight">
            <fieldset>
                <legend>Statistiques</legend>
                <ul class="headersAdmin">
                    <li>Statistiques du site</li>
                    <li>Valeur</li>
                    <li>Statistique du site</li>
                    <li>Valeur</li>
                </ul>
                <table>
                <tr class="statsContent">
                    <td>Commentaires</td>
                    <td>{{ totalComments[0] }}</td>
                    <td>Commentaires par jours</td>
                    <td>5</td>
                </tr>
                <tr class="statsContent">
                    <td>Nombres d'utilisateurs</td>
                    <td>{{ countEveryone[0] }}</td>
                    <td>Articles par jours</td>
                    <td>4</td>
                </tr>
                <tr class="statsContent">
                    <td>Ouverture du site</td>
                    <td>Jeu 26 avril 2018</td>
                    <td>Utilisateurs par jours</td>
                    <td>2</td>
                </tr>
                <tr class="statsContent">
                    <td>Nombres d'articles</td>
                    <td>{{ countEveryArticle[0] }}</td>
                    <td></td>
                    <td></td>
                </tr>
                </table>
            </fieldset>
            <fieldset>
                <legend>Qui est en ligne?</legend>
                <div class="textInligne">Il y a en tout <span class="bold">{{ totalUsers }}</span> utilisateur en ligne :
                <span class="bold">{{ loggedIn[0] }}</span> membre <span class="bold">0</span> invisibles <span class="bold">{{ nonLogged }}</span> invités</div>
                    <ul class="headersAdmin inLigne">
                        <li></li>
                        <li>Connexion</li>
                        <li>Dernière activité</li>
                        <li>Localisation sur le site</li>
                        <li>Adresse IP</li>
                    </ul>
                    {% for datas in userdata %}
                    <ul class="InligneContent">
                    <li>{{ datas['pseudo'] }}</li>
                    <li>{{ datas['log_date'] }}</li>
                    <li>{{ datas['log_date'] }}</li>
                    <li>{{ page }}</li>
                    <li>{{ datas['session_ip'] }}</li>
                    </ul>
                    {% endfor %}
            </fieldset>
        </div>
    </div>
{% endblock %}
