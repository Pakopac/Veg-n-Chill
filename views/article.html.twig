{% extends 'layout.html.twig' %}

{% block page_title %}{{ parent() }} - Home{% endblock %}

{% block content %}
    <h1>Home</h1>

    {% for article in posts %}
        <article>
            <h2>{{ loop.index }} <a href="?action=viewArticle&amp;id={{ article['id'] }}">{{ article['title'] }}</a></h2>
            <div>{{ article['content']|nl2br }}</div>
        </article>
    {% endfor %}
{% endblock %}
