            <button class="buttonComments">
                <img class="arrowComments" src="./assets/images/arrow.svg" width="30px">
            </button>
        </div>
    </form>
    <div class="viewAllComments">
        <div class="viewAllCommentsText">Voir tous les commentaires</div>
        <img src="./assets/images/scroll-top.svg" class="scroll-top" width="20px">
    </div>
</div>
