    <a href="?action=editArticle&amp;id={{ article['id'] }}">edit</a>
{% endif %}
<div class="imgTitlePage imgTitleArticle" style="background-image: url({{ article['img'] }})">
    <div class="blockTitlePage">
        <h1>Actualité</h1>
        <div class="likeTitlePage"><img class="greenHeart" src="./assets/images/greenHeart.svg">{{ article['like'] }} personnes aiment</div>
        <h3>{{ article['title']|raw }}</h3>
        <p>{{ article['description'] }}</p>
    </div>
</div>
